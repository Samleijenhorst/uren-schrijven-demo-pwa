<?xml version="1.0"?>
<mvc:View xmlns="sap.m" displayBlock="true" xmlns:mvc="sap.ui.core.mvc" controllerName="com.alliander.todo.demo.uren-schrijven-demo-pwa.controller.App">
	<Page title="Master">
		<content>
			<Table id="idProductsTable" items="{todo>/}">
				<infoToolbar>
					<Toolbar active="ture">
						<Label text="Activiteiten"/>
					</Toolbar>
				</infoToolbar>
				<columns>
					<Column width="12em">
						<Text text="Taak"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Omschrijving"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Status"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
					</Column>
				</columns>
				<items>
					<ColumnListItem press="onPress">
						<cells>
							<Text text="{todo>title}"/>
							<Text text="{todo>description}"/>
							<CheckBox selected="{todo>done}"/>
							<Button text="Details" press="onPress" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>